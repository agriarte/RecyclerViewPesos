<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="PESO INICIAL"
        android:textSize="18sp"
        android:textStyle="bold"/>



    <TextView
        android:id="@+id/IDfecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:text="28/07/2017"
        android:textColor="@color/colorIgual"
        android:textStyle="bold"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/IDpeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="70Kg"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/IDfecha"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/IDdiferencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/IDfecha"
        android:layout_alignBottom="@+id/IDfecha"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:text="0"
        android:textColor="@color/colorIgual"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/IDpeso"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="Recuerda tu peso objetivo es 75Kg"/>
</RelativeLayout>