<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/IDlista"
                android:layout_width="match_parent"
                android:layout_height="30dp"


                android:layout_margin="10dp"
                android:background="?attr/colorAccent">

    <TextView
        android:id="@+id/IDfecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:text="28/07/2017"
        android:textColor="@color/colorIgual"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/IDpeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="70Kg"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/IDdiferencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/IDfecha"
        android:layout_alignBottom="@+id/IDfecha"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:text="0"
        android:textColor="@color/colorIgual"
        android:textStyle="bold"/>
</RelativeLayout>